@model eCommerce.Models.Product

@{
    ViewBag.Title = "ByProduct";
}

<h2>By Product</h2>

<fieldset>
    <legend>Product</legend>
    <div class="header">
        <div id="header">
            <div class="display-label">
                @Html.DisplayNameFor(model => model.Name)
            </div>
        </div>
        <div>
            <div class="display-field">
                @Html.DisplayFor(model => model.Name)
            </div>
        </div>
    </div>

    <p>

    </p>

    <div class="des">
        <div class="display-label" id="name">
            @Html.DisplayNameFor(model => model.Description)
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.Description)
        </div>
    </div>
    <div class="photoContainer">
    <div class="photo">
      @if(Model.Images.Any()){
           <img class="photo" src="@Model.Images.First().ImageURL" />
      }
   </div>
        <br />
   <div class="thumbnail">
      @foreach (var image in Model.Images)
         {
             
            <img class="thumbnail" src="@image.ImageURL" />
            
         }
    </div>
    <p>

    </p>
    <div class="stuff">
        <div class="display-label">
            @Html.DisplayNameFor(model => model.UnitPrice)
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.UnitPrice)
        </div>
    

    <div class="display-label">
         @Html.DisplayNameFor(model => model.ListPrice)
    </div>

    <div class="display-field">
        @Html.DisplayFor(model => model.ListPrice)
    </div>
    @*opens the form*@
    @using(Html.BeginForm("Add","Cart", FormMethod.Post))
    {
        <label for="Quantity">Qty:</label>
        <select id="Quantity" name="Qty">
        @for (int i = 1; i <= 20; i++)
        {
           <option>@i</option>
        }
        </select>
        <br />
        <input type="submit" value="Add To Cart" />
        @Html.Hidden("ProductID", Model.ProductID)
        @Html.Hidden("UnitPrice", Model.UnitPrice)
    }
    @*closes the form*@
</fieldset>

