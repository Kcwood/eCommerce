@model eCommerce.Models.Product

@{
    ViewBag.Title = "ByProduct";
}

<h2>By Product</h2>

<fieldset>
    <legend>Product</legend>
    <div class="header">
        <div id="header">
            <div class="display-label">
                @Html.DisplayNameFor(model => model.Name)
            </div>
        </div>
        <div>
            <div class="display-field">
                @Html.DisplayFor(model => model.Name)
            </div>
        </div>
    </div>

    <p>

    </p>

    <div class="des">
        <div class="display-label" id="name">
            @Html.DisplayNameFor(model => model.Description)
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.Description)
        </div>
    </div>
    <div class="photoContainer">
    <div class="photo">
      @if(Model.Images.Any()){
           <img src="@Model.Images.First().ImageURL" />
      }
   </div>
        <br />
   <div class="thumbnail">
      @foreach (var image in Model.Images)
         {
             
            <img src="@image.ImageURL" />
            
         }
    </div>
    <p>

    </p>
    <div class="stuff">
        <div class="display-label">
            @Html.DisplayNameFor(model => model.UnitPrice)
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.UnitPrice)
        </div>
    

    <div class="display-label">
         @Html.DisplayNameFor(model => model.ListPrice)
    </div>

    <div class="display-field">
        @Html.DisplayFor(model => model.ListPrice)
    </div>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.InStock)
    </div>

    <div class="display-field">
        @Html.DisplayFor(model => model.InStock)
    </div>
    <p>

    </p>
    <div class="button">
       <input type="submit" value="Add to Cart" />
    </div>
</fieldset>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
